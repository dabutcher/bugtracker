<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.collection_select :role_id,@roles,:id,:rolename,:prompt => "Select Role Type"
    %>
  </div>
  <div class="field">
    <%= f.label :projects %><br />
    <%= f.collection_select  :project_ids,@projects,:id,:projectname,{:prompt => "Select Project"},{:multiple => true , :size => 3}
    %>
    
  </div>
  <br/>
  
    <%= f.submit %>
  
<% end %>
